; Install Kickstart
; -----------------
;
; Date: 2017-10-03
; Author: Henrik Noerfjand Stengaard


; Clear screen

; Kickstart installation
cls
echo "*e[32m" NOLINE
echo "Kickstart Installation"
echo "*e[0m*e[1m" NOLINE
echo "----------------------"
echo "*e[0m" NOLINE


; Create devs and kickstarts directory, if doesn't exists
IF NOT EXISTS "SYSTEMDIR:Devs/Kickstarts/"
  makepath >NIL: "SYSTEMDIR:Devs/Kickstarts"
ENDIF


; Create kickstart directory, if it doesn't exist
IF NOT EXISTS "INSTALLDIR:Kickstart/"
  makepath >NIL: "INSTALLDIR:Kickstart"
ENDIF


; Delete existing kickstart files and run find kickstart rom, if self install prefs exists
IF EXISTS INSTALLDIR:Prefs/Self-Install
  ; Delete existing files from kickstart directory
  Delete >NIL: "INSTALLDIR:Kickstart/#?"

  ; Run find kickstart rom
  execute "INSTALLDIR:S/Find-Kickstart-Rom"
ENDIF


; Run install kickstart rom
execute "INSTALLDIR:S/Install-Kickstart-Rom"


; End
echo ""
echo "Kickstart installation is complete."
echo ""
ask "Press ENTER to continue"