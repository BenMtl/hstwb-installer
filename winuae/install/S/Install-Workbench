; Install Workbench Script
; ------------------------
;
; Date: 2016-11-14
; Author: Henrik Noerfjand Stengaard


echo ""
echo "Workbench installation."


; Workbench
echo "Installing 'workbench31workbench.adf'..."
unadf >NIL: workbench31workbench.adf DEST=Install:

copy >NIL: Install:Workbench3.1 SYSTEMDIR: ALL CLONE


; Locale
echo "Installing 'workbench31locale.adf'..."
unadf >NIL: workbench31locale.adf DEST=Install:

makedir >NIL: SYSTEMDIR:Locale
copy >NIL: Install:Locale SYSTEMDIR:Locale ALL CLONE


; Extras
echo "Installing 'workbench31extras.adf'..."
unadf >NIL: workbench31extras.adf DEST=Install:

copy >NIL: Install:Extras3.1 SYSTEMDIR: ALL CLONE


; Fonts
echo "Installing 'workbench31fonts.adf'..."
unadf >NIL: workbench31fonts.adf DEST=Install:

makedir >NIL: SYSTEMDIR:Fonts
copy >NIL: Install:Fonts SYSTEMDIR:Fonts ALL CLONE


; Install
echo "Installing 'workbench31install.adf'..."
unadf >NIL: workbench31install.adf DEST=Install:

makedir >NIL: SYSTEMDIR:Tools
copy Install:Install3.1/HDTools/BRU SYSTEMDIR:Tools CLONE
copy Install:Install3.1/HDTools/HDBackup SYSTEMDIR:Tools CLONE
copy Install:Install3.1/HDTools/HDBackup.help SYSTEMDIR:Tools CLONE
copy Install:Install3.1/HDTools/HDToolBox SYSTEMDIR:Tools CLONE

copy Install:Install3.1/HDTools/HDBackup.info SYSTEMDIR:Tools CLONE
copy Install:Install3.1/HDTools/HDToolBox.info SYSTEMDIR:Tools CLONE

copy Install:Install3.1/HDTools/S/BRUtab SYSTEMDIR:S CLONE
copy Install:Install3.1/HDTools/S/HDBackup.config SYSTEMDIR:S CLONE 
copy Install:Install3.1/L/FastFileSystem SYSTEMDIR:L CLONE 

copy Install:Install3.1/Libs/68040.library SYSTEMDIR:Libs CLONE 
copy Install:Install3.1/Update/Disk.info SYSTEMDIR: CLONE 


; Storage
echo "Installing 'workbench31storage.adf'..."
unadf >NIL: workbench31storage.adf DEST=Install:

makedir >NIL: SYSTEMDIR:Storage
copy >NIL: Install:Storage3.1 SYSTEMDIR:Storage ALL CLONE
copy Install:Storage3.1/Monitors/PAL SYSTEMDIR:Devs/Monitors CLONE 
copy Install:Storage3.1/Monitors/PAL.info SYSTEMDIR:Devs/Monitors CLONE 
copy Install:Storage3.1/Printers.info SYSTEMDIR:Storage.info CLONE 


; End
echo "Done."
