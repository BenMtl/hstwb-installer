; EAB WHDLoad Pack Install Script
; -------------------------------
;
; Author: Henrik Noerfjand Stengaard
; Date: 2017-11-23

; 'Games_WHDLoad_UnpackOnAmiga' install script

; Install 'Battlestorm_v1.2_2008.zip'
IF EXISTS "USERPACKAGEDIR:Battlestorm_v1.2_2008.zip"
  set itemdir "`execute INSTALLDIR:S/CombinePath "$INSTALLDIR" "B"`"
  echo "Extracting 'Battlestorm_v1.2_2008.zip'..."
  IF NOT EXISTS "$itemdir"
    MakePath >NIL: "$itemdir"
  ENDIF
  unzip -qq -o -x "USERPACKAGEDIR:Battlestorm_v1.2_2008.zip" -d "$itemdir"
ENDIF

; Install 'Battlestorm_v1.2_CDTV.zip'
