; Games WHDLoad UnpackOnAmiga Install Script
; ------------------------------------------
;
; Author: Henrik Noerfjand Stengaard
; Date: 2017-12-17
;
; An AmigaDOS script to install Games WHDLoad UnpackOnAmiga sets from EAB WHDLoad Packs.


set installset `RequestChoice "Games WHDLoad UnpackOnAmiga Set" "Select Games WHDLoad UnpackOnAmiga set to install." "All|AGA|OCS|AGA 4GB|OCS 4GB|Skip"`

IF $installset EQ 1 VAL
  echo "Install All"
  execute USERPACKAGEDIR:Install/AGA
ENDIF

IF $installset EQ 2 VAL
  echo "Install AGA"
  execute USERPACKAGEDIR:Install/AGA
ENDIF

IF $installset EQ 3 VAL
  echo "Install OCS"
  execute USERPACKAGEDIR:Install/OCS
ENDIF

IF $installset EQ 4 VAL
  echo "Install AGA 4GB"
  execute USERPACKAGEDIR:Install/AGA_4GB
ENDIF

IF $installset EQ 5 VAL
  echo "Install OCS 4GB"
  execute USERPACKAGEDIR:Install/OCS_4GB
ENDIF